<Window x:Class="WindowsPresentationFoundation.StartingPlayers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsPresentationFoundation"
        xmlns:lang="clr-namespace:WindowsPresentationFoundation.Properties"
        mc:Ignorable="d"
        Title="Starteri" Height="820" Width="900" WindowStartupLocation="CenterScreen">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="pnlFavourite" Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Center"/>
        <StackPanel x:Name="pnlOpponent" Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center" />

        <Button x:Name="btnPostavke" Content="{x:Static lang:Resources.Postavke}" FontSize="20"  Width="160" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,140" Grid.ColumnSpan="2" Foreground="White"  FontWeight="ExtraBlack" Click="btnPostavke_Click" Background="#FF870B0B" FontFamily="Yu Gothic Medium"/>

    </Grid>

</Window>
