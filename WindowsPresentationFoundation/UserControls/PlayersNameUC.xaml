<UserControl x:Class="WindowsPresentationFoundation.PlayersNameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsPresentationFoundation"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="600">

    <Grid>

        <Border BorderBrush="DimGray"
                        BorderThickness="4"
                        CornerRadius="10"
                        Padding="0"
                        Margin="5"/>
        <Label x:Name="lblName" Content="Ime" Width="420" FontWeight="Black" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Margin="10"/>
        <Button x:Name="btnInfo" Width="100" Height="70" HorizontalAlignment="Right" FontSize="20"  Content="" BorderBrush="transparent" Click="btnInfo_Click" Background="{x:Null}" />
    </Grid>
</UserControl>
